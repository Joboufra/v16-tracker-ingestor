# eTraffic (DGT) endpoint y filtros
ETRAFFIC_ENDPOINT=https://etraffic.dgt.es/etrafficWEB/api/cache/getFilteredData
ETRAFFIC_METHOD=POST
ETRAFFIC_PAYLOAD={"filtrosVia":["Carreteras cortadas","Tráfico lento","Circulación restringida","Desvíos y embolsamientos","Otras vialidades"],"filtrosCausa":["Obras","Accidente","Meteorológicos","Restricciones de circulación","Otras incidencias","Otras afecciones"]}
ETRAFFIC_XOR_KEY=KEY
ETRAFFIC_TIMEZONE=Europe/Madrid

# Poller (ingesta)
POLLING_ENABLED=true
POLL_INTERVAL_SECONDS=45
POLLING_BACKOFF_BASE_SECONDS=5
POLLING_BACKOFF_MAX_SECONDS=60
STALE_AFTER_SECONDS=180
LOST_GC_SECONDS=86400

# HTTP cliente
REQUEST_TIMEOUT_SECONDS=10

# Rate limiting
RATE_LIMIT=60/minute
RATE_LIMIT_STORAGE_URI=memory://
API_KEY=pon-una-api-key
API_KEY_HEADER=X-API-Key
API_KEY_REQUIRED=true
TRUST_X_FORWARDED_FOR=false
API_INCLUDE_RAW=false

# Elasticsearch (dejar ELASTICSEARCH_URL vacío para desactivar)
ELASTICSEARCH_URL=
ELASTICSEARCH_INDEX=v16-events
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_API_KEY=
ELASTICSEARCH_REQUEST_TIMEOUT=10
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_RETRY_ON_TIMEOUT=true
ELASTICSEARCH_VERIFY_CERTS=true
ELASTICSEARCH_CA_CERTS=
ELASTICSEARCH_BOOTSTRAP_LIMIT=5000
ELASTICSEARCH_ALLOW_INSECURE=false

# Logging
LOG_LEVEL=INFO
ETRAFFIC_ALLOWED_HOSTS=etraffic.dgt.es
